<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<%= form_with url: admin_users_path, method: :get, local: true, class: "form-inline mb-3" do %>
  <div class="form-group mr-2">
    <%= text_field_tag :name, params[:name], placeholder: t(".search_by_name"), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag t(".search"), class: "btn btn-primary" %>
  </div>
<% end %>

<%== pagy_bootstrap_nav @pagy if @users.any? %>

<table class="table mt-4">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".email" %></th>
      <th><%= t ".phone" %></th>
      <th><%= t ".activated" %></th>
      <th><%= t ".avatar" %></th>
      <th><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user_activation_status user %></td>
        <td><%= gravatar_for user %></td>
        <td><%= user_actions user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav @pagy if @users.any? %>
