<% provide :title, t(".title") %>
<div class="container mt-4">
  <h1 class="mb-4"><%= t ".title" %></h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
        <%= render "shared/error_messages", error_object: resource %>

        <div class="form-group mb-3">
          <%= f.label :name, t("devise.registrations.new.name"), class: "control-label" %>
          <div class="col-md-12">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, t("devise.registrations.new.email"), class: "control-label" %>
          <div class="col-md-12">
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, t("devise.registrations.new.password"), class: "control-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %><%= t "devise.registrations.new.characters_minimum" %>)</em>
          <% end %>
          <div class="col-md-12">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, t("devise.registrations.new.password_confirmation"), class: "control-label" %>
          <div class="col-md-12">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <div class="col-md-12">
            <%= f.submit t("devise.registrations.new.submit"), class: "custom-btn w-100" %>
          </div>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
